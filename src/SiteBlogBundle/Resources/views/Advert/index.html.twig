{% extends "SiteBlogBundle::layout.html.twig" %}

{% block title %}
	Accueil - {{ parent() }}
{% endblock %}

{% block siteblog_body %}

	<h2>Liste des annonces</h2>

	<ul>
		{% for advert in listAdverts %}
			<li>
				<a href="{{ path('site_blog_view', {'id': advert.id}) }}">
					{{ advert.title }}
				</a>
				par {{ advert.author }},
				le {{ advert.date|date('d/m/Y') }}
			</li>
		{% else %}
			<li>Pas (encore !) d'annonces</li>
		{% endfor %}
	</ul>

	<ul class="pagination">
		{% for p in range(1, nbPages) %}
			<li{% if p == page %} class="active"{% endif %}>
				<a href="{{ path('site_blog_home', {'page': p}) }}">{{ p }}</a>
			</li>
		{% endfor %}
	</ul>

{% endblock %}